<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--  TODO: Devemos isolar o valor dos atributos desse componente  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_tela_inicial"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@color/mettalic_gold"
        android:textColor="@color/maire"
        android:textSize="@dimen/activity_mainTextSize"
        android:padding="@dimen/activity_padding"/>

<!--  TODO: Devemos isolar o valor dos atributos desse componente  -->
    <Button
        android:id="@+id/btn_surprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/button_marginBottom"
        android:text="@string/msg_btn_inicial" />
</RelativeLayout>